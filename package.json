{
  "name": "hxcpp-debug",
  "displayName": "hxcpp Debug",
  "version": "0.0.1",
  "publisher": "jcward",
  "description": "VS Code debug adapter for Haxe hxcpp runtime.",
  "author": {
    "name": "Jeff Ward"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "icon": "images/mock-debug-icon.svg",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/jcward/vscode-hxcpp-debug.git"
  },
  "bugs": {
    "url": "https://github.com/jcward/vscode-hxcpp-debug/issues"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "haxe"
      }
    ],
    "debuggers": [
      {
        "type": "hxcpp",
        "label": "hxcpp Debug",

        "enableBreakpointsFor": { "languageIds": [ "haxe" ] },

        "win": {
            "program": "./bin/windows/vschxcppdb.exe"
        },
        "osx": {
            "program": "./bin/mac/vschxcppdb"
        },
        "linux": {
            "program": "./bin/linux/vschxcppdb"
        },

        "configurationAttributes": {
          "launch": {
            "required": ["args"],
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          }
        },

        "initialConfigurations": [
          {
            "name": "hxcpp-Debug",
            "type": "hxcpp",
            "request": "launch",
            "stopOnEntry": true
          }
        ]
      }
    ]
  }
}
